                    android:id="@+id/taskIndividual"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/taskGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
